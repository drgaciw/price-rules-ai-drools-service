<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-quotes-table" author="claude">
        <createTable tableName="quotes">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="quote_id" type="VARCHAR(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="customer_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="VARCHAR(100)"/>
            <column name="monthly_price" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="base_price" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="final_price" type="DECIMAL(19,2)"/>
            <column name="duration_in_months" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="expected_duration" type="INT"/>
            <column name="customer_tenure_months" type="INT"/>
            <column name="customer_type" type="VARCHAR(50)"/>
            <column name="subscription_type" type="VARCHAR(50)"/>
            <column name="status" type="VARCHAR(20)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="quotes" indexName="idx_quotes_customer_id">
            <column name="customer_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="002-create-customers-table" author="claude">
        <createTable tableName="customers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="VARCHAR(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="customer_type" type="VARCHAR(50)"/>
            <column name="segment" type="VARCHAR(50)"/>
            <column name="contract_start_date" type="TIMESTAMP"/>
            <column name="tenure_months" type="INT"/>
            <column name="total_lifetime_value" type="DECIMAL(19,2)"/>
            <column name="churn_risk_score" type="DECIMAL(5,2)"/>
            <column name="churn_risk_factors" type="VARCHAR(1000)"/>
            <column name="last_purchase_date" type="TIMESTAMP"/>
            <column name="purchase_frequency" type="INT"/>
            <column name="support_tickets_count" type="INT"/>
            <column name="payment_issues_count" type="INT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-update-financial-metrics-table" author="claude">
        <addColumn tableName="financial_metrics">
            <column name="quote_id" type="VARCHAR(100)"/>
        </addColumn>
        <createIndex tableName="financial_metrics" indexName="idx_financial_metrics_quote_id">
            <column name="quote_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>