<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-users-table" author="dev">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(50)"/>
            <column name="last_name" type="VARCHAR(50)"/>
            <column name="enabled" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-create-roles-table" author="dev">
        <createTable tableName="roles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="003-create-user-roles-table" author="dev">
        <createTable tableName="user_roles">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_roles_user_id" references="users(id)"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_roles_role_id" references="roles(id)"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="user_roles" columnNames="user_id, role_id"/>
    </changeSet>

    <changeSet id="004-create-rule-sets-table" author="dev">
        <createTable tableName="rule_sets">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="created_by" type="BIGINT">
                <constraints foreignKeyName="fk_rule_sets_created_by" references="users(id)"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
        </createTable>
    </changeSet>

    <changeSet id="005-create-rules-table" author="dev">
        <createTable tableName="rules">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rule_set_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_rules_rule_set_id" references="rule_sets(id)"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="INT" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="DRAFT">
                <constraints nullable="false"/>
            </column>
            <column name="priority" type="INT" defaultValue="0"/>
            <column name="created_by" type="BIGINT">
                <constraints foreignKeyName="fk_rules_created_by" references="users(id)"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="ai_generated" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>
        <addUniqueConstraint tableName="rules" columnNames="rule_set_id, name, version"/>
    </changeSet>

    <changeSet id="006-create-rule-audit-log-table" author="dev">
        <createTable tableName="rule_audit_log">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rule_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_rule_audit_log_rule_id" references="rules(id)"/>
            </column>
            <column name="action" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="performed_by" type="BIGINT">
                <constraints foreignKeyName="fk_rule_audit_log_performed_by" references="users(id)"/>
            </column>
            <column name="performed_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="007-create-financial-metrics-table" author="dev">
        <createTable tableName="financial_metrics">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="arr" type="DECIMAL(19,2)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="tcv" type="DECIMAL(19,2)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="acv" type="DECIMAL(19,2)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="clv" type="DECIMAL(19,2)" defaultValue="0.00">
                <constraints nullable="false"/>
            </column>
            <column name="churn_risk_score" type="DECIMAL(5,2)" defaultValue="0.00"/>
            <column name="contract_months" type="INT" defaultValue="12"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="financial_metrics" indexName="idx_financial_metrics_customer_id">
            <column name="customer_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="008-create-rule-execution-history-table" author="dev">
        <createTable tableName="rule_execution_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rule_id" type="BIGINT">
                <constraints foreignKeyName="fk_rule_execution_history_rule_id" references="rules(id)"/>
            </column>
            <column name="rule_set_id" type="BIGINT">
                <constraints foreignKeyName="fk_rule_execution_history_rule_set_id" references="rule_sets(id)"/>
            </column>
            <column name="execution_time_ms" type="BIGINT"/>
            <column name="input_data" type="TEXT"/>
            <column name="result" type="TEXT"/>
            <column name="successful" type="BOOLEAN"/>
            <column name="error_message" type="TEXT"/>
            <column name="executed_by" type="BIGINT">
                <constraints foreignKeyName="fk_rule_execution_history_executed_by" references="users(id)"/>
            </column>
            <column name="executed_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="rule_execution_history" indexName="idx_rule_execution_history_rule_id">
            <column name="rule_id"/>
        </createIndex>
        <createIndex tableName="rule_execution_history" indexName="idx_rule_execution_history_rule_set_id">
            <column name="rule_set_id"/>
        </createIndex>
        <createIndex tableName="rule_execution_history" indexName="idx_rule_execution_history_executed_at">
            <column name="executed_at"/>
        </createIndex>
    </changeSet>

    <changeSet id="009-insert-default-roles" author="dev">
        <insert tableName="roles">
            <column name="name" value="ROLE_ADMIN"/>
            <column name="description" value="Administrator role with full access"/>
        </insert>
        <insert tableName="roles">
            <column name="name" value="ROLE_RULE_MANAGER"/>
            <column name="description" value="Can create and manage rules"/>
        </insert>
        <insert tableName="roles">
            <column name="name" value="ROLE_RULE_EXECUTOR"/>
            <column name="description" value="Can execute rules but not modify them"/>
        </insert>
        <insert tableName="roles">
            <column name="name" value="ROLE_MONITOR"/>
            <column name="description" value="Read-only access for monitoring"/>
        </insert>
    </changeSet>

    <changeSet id="010-insert-default-admin-user" author="dev">
        <insert tableName="users">
            <column name="username" value="admin"/>
            <!-- This is a bcrypt hash for 'password', for dev/test only -->
            <column name="password" value="$2a$10$dXJ3SW6G7P50lGmMkkmwe.20cQQubK3.HZWzG3YB1tlRy.fqvM/BG"/>
            <column name="email" value="admin@example.com"/>
            <column name="first_name" value="Admin"/>
            <column name="last_name" value="User"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>
        
        <insert tableName="user_roles">
            <column name="user_id" valueComputed="(SELECT id FROM users WHERE username = 'admin')"/>
            <column name="role_id" valueComputed="(SELECT id FROM roles WHERE name = 'ROLE_ADMIN')"/>
        </insert>
    </changeSet>
</databaseChangeLog>